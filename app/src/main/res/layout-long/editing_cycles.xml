<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_cycle_layout"
    android:background="@color/test_black">

    <TextView
        android:id="@+id/cycle_name_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="22sp">
    </TextView>

    <EditText
        android:id="@+id/cycle_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/circular_progress_default_subtitle"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:hint="@string/cycle_name"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:inputType="textAutoCorrect|textAutoComplete"
        android:maxLength="50"
        android:maxLines="1">
    </EditText>

    <View
        android:id="@+id/bottom_edit_title_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:background="@color/dark_grey">
    </View>

    <TextView
        android:id="@+id/firstRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/secondRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/thirdRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/secondRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/timerValueInEditPopUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textSize="48sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pomTimerValueInEditPopUpTextViewTwo"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:textSize="28sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintStart_toEndOf="@id/pomTimerValueInEditPopUpTextViewOne"
        app:layout_constraintEnd_toStartOf="@id/pomTimerValueInEditPopUpTextViewThree"
        android:layout_marginTop="20dp"
        android:layout_marginStart="2sp"
        android:textSize="28sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pomTimerValueInEditPopUpTextViewTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:textSize="28sp">
    </TextView>

    <ImageButton
        android:id="@+id/deleteEditPopUpTimerNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/timerValueInEditPopUpTextView"
        app:layout_constraintBottom_toTopOf="@id/number_pad_layout"
        android:layout_marginStart="30dp"
        android:src="@drawable/cancel_x"
        android:backgroundTint="@color/light_grey"
        android:layout_marginBottom="22dp"
        android:background="@drawable/ripple_effect_2">
    </ImageButton>

    <ImageButton
        android:id="@+id/toggle_infinity_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:src="@drawable/infinity_large_green"
        android:layout_marginEnd="-8dp"
        android:backgroundTint="@color/test_black">
    </ImageButton>

    <ImageButton
        android:id="@+id/addRoundToCycleButton"
        android:src="@drawable/white_plus_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/number_pad_layout"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/test_black"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:background="@drawable/ripple_effect_4"
        android:clickable="true"
        android:focusable="true">
    </ImageButton>

    <ImageButton
        android:id="@+id/subtractRoundFromCycleButton"
        android:src="@drawable/white_sub_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/number_pad_layout"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="4dp"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/test_black"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:background="@drawable/ripple_effect_4"
        android:clickable="true"
        android:focusable="true">
    </ImageButton>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/number_pad_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/timerValueInEditPopUpTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/one_button"
            android:text="1"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/two_button"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/two_button"
            android:text="2"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/one_button"
            app:layout_constraintEnd_toStartOf="@id/three_button"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/three_button"
            android:text="3"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/two_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/four_button"
            android:text="4"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/five_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/five_button"
            android:text="5"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toEndOf="@id/four_button"
            app:layout_constraintEnd_toStartOf="@id/six_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/six_button"
            android:text="6"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toEndOf="@id/five_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/seven_button"
            android:text="7"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/eight_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/eight_button"
            android:text="8"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toEndOf="@id/seven_button"
            app:layout_constraintEnd_toStartOf="@id/nine_button"
            android:layout_marginTop="2dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/nine_button"
            android:text="9"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toEndOf="@id/eight_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/zero_button"
            android:text="0"
            android:textSize="40sp"
            style="@style/EditButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seven_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:text="Add an activity!"
        android:id="@+id/tdee_add_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/round_recycler_layout"
        app:layout_constraintEnd_toEndOf="@id/round_recycler_layout"
        app:layout_constraintTop_toBottomOf="@id/number_pad_layout"
        app:layout_constraintBottom_toTopOf="@id/round_recycler_layout"
        android:layout_marginBottom="18dp"
        android:textColor="@color/white"
        app:layout_constraintWidth_max="320dp"
        android:gravity="center_horizontal"
        android:textSize="22sp">
    </TextView>

    <ImageView
        android:id="@+id/cancel_activity_for_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_x"
        app:layout_constraintStart_toEndOf="@id/tdee_add_textView"
        app:layout_constraintTop_toTopOf="@id/tdee_add_textView"
        app:layout_constraintBottom_toBottomOf="@id/tdee_add_textView"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp">
    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/round_recycler_layout"
        android:layout_width="240dp"
        android:layout_height="260dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/recycler_border">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/round_list_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:id="@+id/round_list_divider"
            android:layout_width="2dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/light_black">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/round_list_recycler_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/round_list_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/buttonToLaunchTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/start_cycle">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>