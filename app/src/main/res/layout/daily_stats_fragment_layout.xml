<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_stats_fragment_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/StatFragmentTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stats_total_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/daily_total_stats_border">

        <View
            android:id="@+id/tdee_edit_popUp_anchor_high"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/stat_duration_switcher_button_left"
            app:layout_constraintBottom_toBottomOf="@id/stat_duration_switcher_button_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </View>

        <TextView
            android:id="@+id/total_stats_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_total_header"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/stat_duration_switcher_button_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/stat_duration_switcher_button_left">
        </TextView>

        <ImageButton
            android:id="@+id/stat_duration_switcher_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/edit_tdee_stats_button"
            app:layout_constraintBottom_toBottomOf="@id/edit_tdee_stats_button"
            app:layout_constraintEnd_toStartOf="@id/total_stats_header"
            android:layout_marginEnd="12dp"
            android:src="@drawable/double_arrow_left"
            android:backgroundTint="@color/dark_grey">
        </ImageButton>

        <ImageButton
            android:id="@+id/stat_duration_switcher_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/edit_tdee_stats_button"
            app:layout_constraintBottom_toBottomOf="@id/edit_tdee_stats_button"            app:layout_constraintStart_toEndOf="@id/total_stats_header"
            android:layout_marginStart="12dp"
            android:src="@drawable/double_arrow_right"
            android:backgroundTint="@color/dark_grey">
        </ImageButton>

        <ImageButton
            android:id="@+id/edit_tdee_stats_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/edit_icon"
            android:backgroundTint="@color/dark_grey">
        </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daily_stats_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_total_header_layout"
        android:layout_marginTop="4dp">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/total_stats_values_textView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/stats_calendar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">
        <!-- app:layout_constraintTop_toBottomOf="@id/daily_stats_recyclerView" -->

        <TextView
            android:id="@+id/total_stats_textView"
            android:text="@string/total"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_and_total_stats_divider"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/daily_stats_total_set_time_textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_and_total_stats_divider"
            app:layout_constraintStart_toEndOf="@id/total_stats_textView"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/daily_stats_total_calories_burned_textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_and_total_stats_divider"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textStyle="bold">
        </TextView>

        <View
            android:id="@+id/recycler_and_total_stats_divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/daily_stats_total_calories_burned_textView"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black">
        </View>

        <View
            android:id="@+id/recycler_and_calendar_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daily_stats_total_calories_burned_textView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp"
            android:background="@color/black">
        </View>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/stats_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mcv_tileHeight="40dp"
        app:mcv_tileWidth="50dp"
        app:mcv_showOtherDates="other_months"
        app:mcv_dateTextAppearance="@style/CustomTextAppearance">
    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

    <ImageButton
        android:id="@+id/minimize_calendarView_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/arrow_down_2"
        android:background="@color/dark_grey">
    </ImageButton>

    <View
        android:id="@+id/tdee_edit_popUp_anchor_low"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stats_calendar"
        android:layout_marginTop="4dp">
    </View>

    <View
        android:id="@+id/tdee_edit_popUp_anchor_bottom"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>