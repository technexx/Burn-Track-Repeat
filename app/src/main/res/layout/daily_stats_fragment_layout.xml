<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/StatFragmentTheme">

    <CalendarView
        android:id="@+id/stats_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </CalendarView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daily_stats_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/daily_stats_total_set_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stats_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/daily_stats_total_break_time_textView"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/daily_stats_total_break_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/daily_stats_total_set_time_textView"
        app:layout_constraintEnd_toEndOf="@id/daily_stats_total_calories_burned_textView"
        app:layout_constraintTop_toBottomOf="@id/stats_calendar"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/daily_stats_total_calories_burned_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/daily_stats_total_break_time_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_calendar"
        android:gravity="center">
    </TextView>

    <Button
        android:id="@+id/test_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/daily_stats_total_calories_burned_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/fab_plus">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>