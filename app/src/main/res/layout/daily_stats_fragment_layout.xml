<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/StatFragmentTheme">

    <CalendarView
        android:id="@+id/stats_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </CalendarView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stats_total_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stats_calendar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/daily_total_stats_border">

        <TextView
            android:id="@+id/total_stats_header"
            android:text="@string/day_total_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/daily_stats_total_break_time_textView"
            app:layout_constraintEnd_toEndOf="@id/daily_stats_total_break_time_textView"
            android:layout_marginTop="6dp"
            android:textStyle="bold">
        </TextView>

        <ImageButton
            android:id="@+id/stat_duration_switcher_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/total_stats_header"
            android:layout_marginEnd="12dp"
            android:src="@drawable/double_arrow_left"
            android:backgroundTint="@color/dark_grey">
        </ImageButton>

        <ImageButton
            android:id="@+id/stat_duration_switcher_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/total_stats_header"
            android:layout_marginStart="12dp"
            android:src="@drawable/double_arrow_right"
            android:backgroundTint="@color/dark_grey">
        </ImageButton>

        <TextView
            android:id="@+id/daily_stats_total_set_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/total_stats_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/daily_stats_total_break_time_textView"
            android:layout_marginTop="10dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/daily_stats_total_break_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/daily_stats_total_set_time_textView"
            app:layout_constraintEnd_toEndOf="@id/daily_stats_total_daily_time_and_calories_burned_textView"
            app:layout_constraintTop_toBottomOf="@id/total_stats_header"
            android:layout_marginTop="10dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/daily_stats_total_daily_time_and_calories_burned_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/daily_stats_total_break_time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_stats_header"
            android:layout_marginTop="10dp"
            android:gravity="center">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daily_stats_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_total_header_layout"
        android:layout_marginTop="4dp">
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/tdee_edit_popUp_anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_tdee_stats_button"
        android:layout_marginTop="4dp">
    </View>

    <ImageButton
        android:id="@+id/edit_tdee_stats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/edit_icon"
        android:backgroundTint="@color/dark_grey">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>