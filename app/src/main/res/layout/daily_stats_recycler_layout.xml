<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:theme="@style/StatRecyclerViewsTheme">

    <!--Stat views (except activity) constrained from END because width of activity String is variable-->
    <TextView
        android:id="@+id/activity_in_daily_stats_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="2dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">
    </TextView>

    <TextView
        android:id="@+id/set_time_in_daily_stats_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_in_daily_stats_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="17sp">
    </TextView>

    <TextView
        android:id="@+id/calories_burned_in_daily_stats_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:textSize="17sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>