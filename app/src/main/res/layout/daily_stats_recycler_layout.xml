<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <!--Stat views (except activity) constrained from END because width of activity String is variable-->
    <TextView
        android:id="@+id/activity_in_daily_stats_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="2dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/set_time_in_daily_stats_textView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/activity_in_daily_stats_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="40dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/break_time_in_daily_stats_textView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/calories_burned_in_daily_stats_textView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/delete_activity_in_edit_stats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

    <ImageButton
        android:id="@+id/delete_activity_in_edit_stats"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/dark_grey"
        android:src="@drawable/cancel_x_small"
        android:layout_marginEnd="4dp">
    </ImageButton>

