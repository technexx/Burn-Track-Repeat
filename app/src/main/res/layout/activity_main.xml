<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:id="@+id/main_layout">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Gray"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabTextAppearance="@style/tabText"
        app:tabIndicatorFullWidth="true">
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/cycle_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"
        android:textColor="@color/teal_200"
        android:textSize="24sp">
    </TextView>

    <TextView
        android:id="@+id/s1"
        android:text="Set Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        style="popup"
        />

    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16.5dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s2"
        android:layout_marginTop="16.5dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/plus_first_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        android:layout_marginTop="48.5dp"
        android:layout_marginStart="125dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_first_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        android:layout_marginTop="48.5dp"
        android:layout_marginStart="250dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_second_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_first_value"
        android:layout_marginStart="125dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="16sp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_second_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_first_value"
        android:layout_marginStart="250dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="16sp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_third_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_second_value"
        android:layout_marginStart="125dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_third_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_second_value"
        android:layout_marginStart="250dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <EditText
        android:id="@+id/first_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_first_value"
        app:layout_constraintEnd_toStartOf="@id/first_value_sep"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33.5dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp">
    </EditText>

    <TextView
        android:text=":"
        android:id="@+id/first_value_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/first_value_edit"
        app:layout_constraintEnd_toStartOf="@id/first_value_edit_two"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        android:textStyle="bold"
        android:textSize="28sp">
    </TextView>

    <EditText
        android:id="@+id/first_value_edit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/first_value_sep"
        app:layout_constraintEnd_toStartOf="@id/minus_first_value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp">
    </EditText>

    <TextView
        android:id="@+id/first_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_first_value"
        app:layout_constraintEnd_toStartOf="@id/minus_first_value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46.5dp"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/second_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_second_value"
        app:layout_constraintEnd_toStartOf="@id/second_value_sep"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <TextView
        android:text=":"
        android:id="@+id/second_value_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/second_value_edit"
        app:layout_constraintEnd_toStartOf="@id/second_value_edit_two"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp"
        android:textStyle="bold"
        android:textSize="28sp">
    </TextView>

    <EditText
        android:id="@+id/second_value_edit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/second_value_sep"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <TextView
        android:id="@+id/second_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_second_value"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/third_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_third_value"
        app:layout_constraintEnd_toStartOf="@id/minus_third_value"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="number">
    </EditText>

    <Button
        android:text="A"
        android:id="@+id/add_cycle"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="-10dp"
        android:paddingStart="-10dp"
        android:backgroundTint="@color/light_grey">
    </Button>

    <Button
        android:text="S"
        android:id="@+id/subtract_cycle"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_cycle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="-10dp"
        android:paddingStart="-10dp"
        android:backgroundTint="@color/light_grey">
    </Button>

    <ImageButton
        android:id="@+id/left_arrow"
        android:src="@drawable/arrow_left_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="260dp"
        android:background="@color/black">
    </ImageButton>

    <ImageButton
        android:id="@+id/right_arrow"
        android:src="@drawable/arrow_right_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="260dp"
        android:background="@color/black">
    </ImageButton>

    <com.example.tragic.irate.simple.stopwatch.DotDraws
        android:id="@+id/dotdraws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout">
    </com.example.tragic.irate.simple.stopwatch.DotDraws>

    <TextView
        android:id="@+id/cycles_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="270dp"
        android:textColor="@color/white"
        android:textSize="14sp">
    </TextView>

    <ImageButton
        android:id="@+id/delete_set_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="-2dp"
        android:paddingStart="-2dp"
        android:paddingTop="-4dp"
        android:paddingBottom="-4dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/delete_sb"
        android:background="@color/black">
    </ImageButton>

    <TextView
        android:id="@+id/skip"
        android:textColor="@color/white"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/new_lap"
        android:textColor="@color/white"
        android:layout_width="70dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="33dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/cycle_reset"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/timeLeft"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timeLeft2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timeLeft3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/msTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/msTimePaused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="16sp">
    </TextView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10000"
        android:progressDrawable="@drawable/circle_progress"
        android:background="@drawable/circle_shape">
    </ProgressBar>

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10000"
        android:progressDrawable="@drawable/circle_progress"
        android:background="@drawable/circle_shape">
    </ProgressBar>

    <ImageView
        android:id="@+id/stopWatchView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        android:src="@drawable/circle_stopwatch">
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pauseResumeButton"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="14dp"
        app:cornerRadius="90dp"
        android:background="@color/black">
    </com.google.android.material.button.MaterialButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lap_recycler"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/pauseResumeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/reset"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="3dp"
        android:textSize="16sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>