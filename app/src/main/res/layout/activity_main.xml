<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:id="@+id/main_layout">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/savedCyclesTabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Gray"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabTextAppearance="@style/tabText"
        app:tabIndicatorFullWidth="true">
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cycle_list_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statsTabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:paddingBottom="40dp">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pom_list_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statsTabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:paddingBottom="40dp">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/statsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savedCyclesTabLayout"
        android:background="@color/Gray"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/purple"
        app:tabTextAppearance="@style/tabText"
        app:tabIndicatorFullWidth="false"
        android:layout_marginTop="2dp">
    </com.google.android.material.tabs.TabLayout>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/fab_circle"
        android:src="@drawable/fab_plus"
        app:elevation="8dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/stopwatch_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_black_pointer"
        android:background="@drawable/fab_circle"
        app:elevation="8dp">
    </ImageButton>

    <TextView
        android:id="@+id/empty_cycle_list"
        android:text="@string/empty_cycle_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="14sp">
    </TextView>

    <com.example.tragic.irate.simple.stopwatch.Canvas.BlankCanvas
        android:id="@+id/blank_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.tragic.irate.simple.stopwatch.Canvas.BlankCanvas>

    <FrameLayout
        android:id="@+id/settings_fragment_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/savedCyclesTabLayout"
        android:background="@color/dark_grey">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>