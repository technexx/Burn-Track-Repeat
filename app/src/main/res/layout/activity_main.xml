<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:id="@+id/main_layout">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Gray"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabTextAppearance="@style/tabText"
        app:tabIndicatorFullWidth="true">
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/s1"
        android:text="Set Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        style="popup"
        />

    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15.5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/no_set_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>

    <ImageButton
        android:id="@+id/plus_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        android:layout_marginTop="45dp"
        android:layout_marginStart="150dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        android:layout_marginTop="45dp"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_breaks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_sets"
        android:layout_marginStart="150dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_breaks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_sets"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_breaks"
        android:layout_marginStart="150dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_breaks"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <TextView
        android:id="@+id/set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_rounds"
        app:layout_constraintEnd_toStartOf="@id/minus_rounds"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        android:textSize="22sp"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/break_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_rounds"
        app:layout_constraintEnd_toStartOf="@id/minus_rounds"
        app:layout_constraintTop_toBottomOf="@id/set_time"
        android:layout_marginTop="13.5dp"
        android:textSize="22sp"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/round_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_rounds"
        app:layout_constraintEnd_toStartOf="@id/minus_rounds"
        app:layout_constraintTop_toBottomOf="@id/break_time"
        android:layout_marginTop="13.5dp"
        android:textSize="22sp"
        android:textColor="@color/white">
    </TextView>

    <com.example.tragic.irate.simple.stopwatch.DotDraws
        android:id="@+id/dotdraws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout">
    </com.example.tragic.irate.simple.stopwatch.DotDraws>

    <TextView
        android:id="@+id/cycles_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="270dp"
        android:textColor="@color/white"
        android:textSize="14sp">
    </TextView>

    <TextView
        android:id="@+id/skip"
        android:textColor="@color/white"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/new_lap"
        android:textColor="@color/white"
        android:layout_width="70dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="33dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/cycle_reset"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/timeLeft"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timeLeft2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timeLeft3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/timePaused3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar">
    </TextView>

    <TextView
        android:id="@+id/msTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/msTimePaused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="16sp">
    </TextView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10000"
        android:progressDrawable="@drawable/circle_progress"
        android:background="@drawable/circle_shape">
    </ProgressBar>

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10000"
        android:progressDrawable="@drawable/circle_progress"
        android:background="@drawable/circle_shape">
    </ProgressBar>

    <ImageView
        android:id="@+id/stopWatchView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        android:src="@drawable/circle_stopwatch">
    </ImageView>

    <!--    <ImageView-->
    <!--        android:id="@+id/pauseResumeView"-->
    <!--        android:layout_width="150dp"-->
    <!--        android:layout_height="150dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        android:layout_marginBottom="4dp"-->
    <!--        android:src="@drawable/circle_clicker"-->
    <!--        android:background="@color/Gray">-->
    <!--    </ImageView>-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pauseResumeButton"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="14dp"
        app:cornerRadius="90dp"
        android:background="@color/black">
    </com.google.android.material.button.MaterialButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lap_recycler"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/pauseResumeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/reset"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="3dp"
        android:textSize="16sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>