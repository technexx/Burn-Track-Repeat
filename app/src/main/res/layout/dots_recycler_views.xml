<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="28dp"
    android:layout_marginEnd="2dp"
    android:background="@color/dark_grey">

    <ImageView
        android:id="@+id/round_string_imageView"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/round_string_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="More Fonts..."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/round_string_imageView"
        app:layout_constraintEnd_toEndOf="@id/round_string_imageView"
        app:layout_constraintStart_toStartOf="@id/round_string_imageView"
        app:layout_constraintTop_toTopOf="@id/round_string_imageView"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>