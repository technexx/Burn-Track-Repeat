<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/TimerTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/laps_completed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pauseResumeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="24sp">
    </TextView>

    <com.example.tragic.irate.simple.stopwatch.Canvas.LapListCanvas
        android:id="@+id/lapCanvas"
        android:layout_width="280dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/laps_completed_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
    </com.example.tragic.irate.simple.stopwatch.Canvas.LapListCanvas>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lap_recycler"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toBottomOf="@id/laps_completed_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
    </androidx.recyclerview.widget.RecyclerView>
    
    <ImageButton
        android:id="@+id/stopwatchPauseResumeCircle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:progressDrawable="@drawable/circle_progress"
        android:background="@drawable/circle_shape"
        >
    </ImageButton>

    <TextView
        android:id="@+id/stopWatchTimeTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stopwatchPauseResumeCircle"
        app:layout_constraintBottom_toBottomOf="@id/stopwatchPauseResumeCircle"
        app:layout_constraintStart_toStartOf="@id/stopwatchPauseResumeCircle"
        app:layout_constraintEnd_toEndOf="@id/stopwatchPauseResumeCircle"
        android:textSize="80sp">
    </TextView>

    <TextView
        android:id="@+id/msTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stopWatchTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp">
    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stopwatchPauseResume"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="44dp"
        android:background="@color/black"
        app:cornerRadius="90dp">
    </com.google.android.material.button.MaterialButton>

    <ImageButton
        android:id="@+id/new_lap"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/black"
        android:src="@drawable/flag"
        app:elevation="8dp">
    </ImageButton>

    <TextView
        android:id="@+id/stopwatch_reset"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pauseResumeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/empty_laps_text"
        android:text="@string/empty_laps_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lap_recycler"
        app:layout_constraintBottom_toBottomOf="@id/lap_recycler"
        app:layout_constraintStart_toStartOf="@id/lap_recycler"
        app:layout_constraintEnd_toEndOf="@id/lap_recycler">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>