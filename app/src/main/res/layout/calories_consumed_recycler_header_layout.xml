<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/StatRecyclerHeaderTheme">

    <TextView
        android:id="@+id/food_eaten_header"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/calories_consumed_by_food_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        android:minWidth="100dp"
        android:maxWidth="150dp"
        android:gravity="center">
    </TextView>

    <View
        android:id="@+id/cycle_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_eaten_header"
        android:layout_marginTop="1.5dp"
        android:background="@color/mid_grey">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>