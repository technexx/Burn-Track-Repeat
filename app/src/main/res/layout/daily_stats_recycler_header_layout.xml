<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_in_daily_stats_header"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/set_time_in_daily_stats_header"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/activity_in_daily_stats_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="40dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/calories_burned_in_daily_stats_header"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:gravity="center">
    </TextView>

