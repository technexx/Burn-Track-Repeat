    </TextView>

    <EditText
        android:id="@+id/food_name_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/food_name_header"
        app:layout_constraintStart_toStartOf="@id/food_name_header"
        app:layout_constraintEnd_toEndOf="@id/food_name_header"
        android:layout_marginTop="30dp">
    </EditText>

