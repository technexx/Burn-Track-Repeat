<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="45dp"
    android:layout_height="55dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!--Setting src/background image here cuts off left/right sides-->
    <ImageView
        android:id="@+id/round_string_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <!--ImageView meant to be main visual. This just sets text directly inside it. -->
    <TextView
        android:id="@+id/round_string_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/round_string_imageView"
        app:layout_constraintStart_toStartOf="@id/round_string_imageView"
        app:layout_constraintEnd_toEndOf="@id/round_string_imageView"
        android:fontFamily="@font/big_shoulders_text_bold"
        app:layout_constraintTop_toTopOf="@id/round_string_imageView">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>