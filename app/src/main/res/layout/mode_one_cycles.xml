<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/custom_name_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="@color/light_grey"
        android:maxLines="1"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/saved_custom_set_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cycle_and_tdee_text_constraint"
        android:textSize="15sp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="24dp">
    </TextView>

    <TextView
        android:text="Reset"
        android:id="@+id/reset_active_cycle_button_for_mode_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/saved_custom_set_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/reset_active_cycle_button_for_mode_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:background="@color/test_black">
    </View>

    <TextView
        android:text="@string/tdee_track"
        android:id="@+id/tdee_toggle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cycle_and_tdee_text_constraint"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:textSize="14sp">
    </TextView>

    <View
        android:id="@+id/cycle_and_tdee_text_constraint"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/saved_custom_set_view"
        app:layout_constraintEnd_toStartOf="@id/tdee_toggle">
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>