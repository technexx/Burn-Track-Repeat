<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Gray">

    <TextView
        android:id="@+id/activity_string_in_edit_popUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:maxWidth="300dp">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp">

        <EditText
            android:id="@+id/tdee_editText_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/first_edit_colon"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"
            android:hint="00"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:layout_marginEnd="16dp"
            android:textSize="32sp">
        </EditText>

        <TextView
            android:id="@+id/first_edit_colon"
            android:text="@string/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tdee_editText_hours"
            app:layout_constraintBottom_toBottomOf="@id/tdee_editText_hours"
            app:layout_constraintStart_toEndOf="@id/tdee_editText_hours"
            app:layout_constraintEnd_toStartOf="@id/tdee_editText_minutes"
            android:textSize="36sp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp">
        </TextView>

        <EditText
            android:id="@+id/tdee_editText_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tdee_editText_hours"
            app:layout_constraintBottom_toBottomOf="@id/tdee_editText_hours"
            app:layout_constraintStart_toEndOf="@id/first_edit_colon"
            app:layout_constraintEnd_toStartOf="@id/second_edit_colon"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:background="@null"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:singleLine="true"
            android:maxLength="2"
            android:inputType="number"
            android:hint="00"
            android:layout_marginEnd="16dp"
            android:textColorHint="@color/light_grey">
        </EditText>

        <TextView
            android:id="@+id/second_edit_colon"
            android:text="@string/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tdee_editText_hours"
            app:layout_constraintBottom_toBottomOf="@id/tdee_editText_hours"
            app:layout_constraintStart_toEndOf="@id/tdee_editText_minutes"
            app:layout_constraintEnd_toStartOf="@id/tdee_editText_seconds"
            android:textSize="36sp"
            android:layout_marginBottom="4dp">
        </TextView>

        <EditText
            android:id="@+id/tdee_editText_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tdee_editText_hours"
            app:layout_constraintBottom_toBottomOf="@id/tdee_editText_hours"
            app:layout_constraintStart_toEndOf="@id/second_edit_colon"
            android:layout_marginStart="16dp"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:background="@null"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:singleLine="true"
            android:maxLength="2"
            android:inputType="number"
            android:hint="00"
            android:textColorHint="@color/light_grey">
        </EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/confirm_activity_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/edit_confirm_checkmark"
        android:backgroundTint="@color/Gray">
    </ImageButton>

    <ImageButton
        android:id="@+id/activity_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/trash_can_two"
        android:backgroundTint="@color/Gray">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>