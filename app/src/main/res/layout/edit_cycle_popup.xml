<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey">

    <TextView
        android:id="@+id/s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/minus_second_value"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="6dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/plus_third_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_third_value"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="14dp"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/plus_first_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/dark_grey"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_first_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="235dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/dark_grey"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_second_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_first_value"
        android:layout_marginStart="100dp"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_second_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_first_value"
        android:layout_marginStart="235dp"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/plus_third_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_second_value"
        android:layout_marginStart="100dp"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <ImageButton
        android:id="@+id/minus_third_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus_second_value"
        android:layout_marginStart="235dp"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded">
    </ImageButton>

    <TextView
        android:id="@+id/first_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_first_value"
        app:layout_constraintEnd_toStartOf="@id/minus_first_value"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:layout_marginBottom="3dp"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/first_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_first_value"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp">
    </EditText>

    <TextView
        android:text=":"
        android:id="@+id/first_value_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:layout_marginStart="182dp"
        android:layout_marginBottom="3dp"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/first_value_edit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp">
    </EditText>

    <EditText
        android:id="@+id/first_value_single_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_first_value"
        app:layout_constraintEnd_toStartOf="@id/minus_first_value"
        app:layout_constraintTop_toTopOf="@id/plus_first_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_first_value"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="3"
        android:minWidth="35dp">
    </EditText>

    <TextView
        android:id="@+id/second_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_second_value"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_second_value"
        android:layout_marginBottom="3dp"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/second_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_second_value"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_second_value"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <TextView
        android:text=":"
        android:id="@+id/second_value_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_second_value"
        android:textSize="25sp"
        android:layout_marginStart="182dp"
        android:layout_marginBottom="3dp">
    </TextView>

    <EditText
        android:id="@+id/second_value_edit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_second_value"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="24dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <EditText
        android:id="@+id/second_value_single_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_second_value"
        app:layout_constraintEnd_toStartOf="@id/minus_second_value"
        app:layout_constraintTop_toTopOf="@id/plus_second_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_second_value"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <TextView
        android:id="@+id/third_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_third_value"
        app:layout_constraintEnd_toStartOf="@id/minus_third_value"
        app:layout_constraintTop_toTopOf="@id/plus_third_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_third_value"
        android:textSize="25sp">
    </TextView>

    <EditText
        android:id="@+id/third_value_single_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/plus_third_value"
        app:layout_constraintEnd_toStartOf="@id/minus_third_value"
        app:layout_constraintTop_toTopOf="@id/plus_third_value"
        app:layout_constraintBottom_toBottomOf="@id/plus_third_value"
        android:layout_marginTop="6dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="number"
        android:maxLength="2"
        android:minWidth="35dp"
        android:gravity="center_horizontal">
    </EditText>

    <ImageButton
        android:id="@+id/s1_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/arrow_up"
        android:background="@drawable/rectangle_shape_2">
    </ImageButton>

    <ImageButton
        android:id="@+id/s2_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/arrow_up"
        android:background="@drawable/rectangle_shape_2">
    </ImageButton>

    <Button
        android:text="Add"
        android:id="@+id/add_cycle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/subtract_cycle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/dark_grey"
        app:cornerRadius="50dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">
    </Button>

    <Button
        android:text="Remove"
        android:id="@+id/subtract_cycle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_cycle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/dark_grey"
        app:cornerRadius="50dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>