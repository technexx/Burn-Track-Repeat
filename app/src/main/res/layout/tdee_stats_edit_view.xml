<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mid_grey">

    <TextView
        android:id="@+id/activity_string_in_edit_popUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:maxWidth="240dp">
    </TextView>

    <EditText
        android:id="@+id/tdee_editText_hours"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tdee_editText_minutes"
        android:layout_marginBottom="12dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:maxLength="3"
        android:gravity="center"
        android:inputType="number">
    </EditText>

    <TextView
        android:id="@+id/first_edit_colon"
        android:text="@string/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tdee_editText_hours"
        app:layout_constraintEnd_toStartOf="@id/tdee_editText_minutes"
        android:layout_marginBottom="16dp"
        android:textSize="30sp">
    </TextView>

    <EditText
        android:id="@+id/tdee_editText_minutes"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:maxLength="2"
        android:gravity="center"
        android:inputType="number">
    </EditText>

    <TextView
        android:id="@+id/second_edit_colon"
        android:text="@string/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tdee_editText_minutes"
        app:layout_constraintEnd_toStartOf="@id/tdee_editText_seconds"
        android:layout_marginBottom="16dp"
        android:textSize="30sp">
    </TextView>

    <EditText
        android:id="@+id/tdee_editText_seconds"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_string_in_edit_popUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tdee_editText_minutes"
        android:layout_marginBottom="12dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:maxLength="2"
        android:gravity="center"
        android:inputType="number">
    </EditText>

    <ImageButton
        android:id="@+id/confirm_stats_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/edit_confirm_checkmark"
        android:backgroundTint="@color/mid_grey">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>