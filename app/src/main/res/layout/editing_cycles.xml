<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_cycle_layout"
    android:background="@color/test_black">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65">
    </androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/cycle_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/circular_progress_default_subtitle"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:hint="@string/cycle_name"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:inputType="textAutoCorrect|textAutoComplete"
        android:maxLength="35"
        android:maxLines="1">
    </EditText>

    <View
        android:id="@+id/bottom_edit_title_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:background="@color/dark_grey">
    </View>

    <TextView
        android:id="@+id/firstRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/secondRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/thirdRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/secondRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/timerValueInEditPopUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textSize="48sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pomTimerValueInEditPopUpTextViewTwo"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:textSize="28sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintStart_toEndOf="@id/pomTimerValueInEditPopUpTextViewOne"
        app:layout_constraintEnd_toStartOf="@id/pomTimerValueInEditPopUpTextViewThree"
        android:layout_marginTop="20dp"
        android:layout_marginStart="2sp"
        android:textSize="28sp">
    </TextView>

    <TextView
        android:id="@+id/pomTimerValueInEditPopUpTextViewThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pomTimerValueInEditPopUpTextViewTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:textSize="28sp">
    </TextView>

    <ImageButton
        android:id="@+id/deleteEditPopUpTimerNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/number_pad_layout"
        android:src="@drawable/cancel_x_black"
        android:backgroundTint="@color/light_grey"
        android:layout_marginBottom="22dp"
        android:background="@drawable/ripple_effect_2">
    </ImageButton>

    <ImageButton
        android:id="@+id/toggle_infinity_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/timerValueInEditPopUpTextView"
        app:layout_constraintBottom_toBottomOf="@+id/timerValueInEditPopUpTextView"
        app:layout_constraintStart_toStartOf="@id/addRoundToCycleButton"
        app:layout_constraintEnd_toEndOf="@id/addRoundToCycleButton"
        android:layout_marginEnd="0dp"
        android:background="@color/test_black">
    </ImageButton>

    <ImageButton
        android:id="@+id/addRoundToCycleButton"
        android:src="@drawable/white_plus_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/number_pad_layout"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:textSize="15sp"
        android:gravity="center"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/test_black"
        android:background="@drawable/ripple_effect_4"
        android:clickable="true"
        android:focusable="true">
    </ImageButton>

    <ImageButton
        android:id="@+id/subtractRoundFromCycleButton"
        android:src="@drawable/white_sub_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/number_pad_layout"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="4dp"
        android:textSize="15sp"
        android:gravity="center"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/test_black"
        android:background="@drawable/ripple_effect_4"
        android:clickable="true"
        android:focusable="true">
    </ImageButton>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/number_pad_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timerValueInEditPopUpTextView"
        app:layout_constraintBottom_toTopOf="@id/edit_guideline_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        style="@style/EditButtonTextColor">

        <TextView
            android:id="@+id/one_button"
            android:text="1"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/two_button"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/two_button"
            android:text="2"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/one_button"
            app:layout_constraintEnd_toStartOf="@id/three_button"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/three_button"
            android:text="3"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/two_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/four_button"
            android:text="4"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/five_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/five_button"
            android:text="5"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toEndOf="@id/four_button"
            app:layout_constraintEnd_toStartOf="@id/six_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/six_button"
            android:text="6"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_button"
            app:layout_constraintStart_toEndOf="@id/five_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/seven_button"
            android:text="7"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/eight_button"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/eight_button"
            android:text="8"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toEndOf="@id/seven_button"
            app:layout_constraintEnd_toStartOf="@id/nine_button"
            android:layout_marginTop="2dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/nine_button"
            android:text="9"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintStart_toEndOf="@id/eight_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView
            android:id="@+id/zero_button"
            android:text="0"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seven_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tdee_add_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/edit_guideline_1"
        app:layout_constraintBottom_toBottomOf="@id/edit_guideline_3"
        app:layout_constraintStart_toStartOf="@id/round_list_recycler"
        app:layout_constraintEnd_toEndOf="@id/round_list_recycler"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:maxWidth="350dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="22sp"
        android:maxLines="2">
    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_horizontal_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_horizontal_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/round_list_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/edit_horizontal_guideline_1"
        app:layout_constraintEnd_toEndOf="@id/edit_horizontal_guideline_2"
        app:layout_constraintTop_toBottomOf="@id/edit_guideline_3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/recycler_border_without_divider_thin">
    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/buttonToLaunchTimerFromEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/start_cycle">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>