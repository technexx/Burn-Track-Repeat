<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/test_black"
    android:id="@+id/edit_cycle_layout">

    <View
        android:id="@+id/edit_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_cycles_header">
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_header"
        android:background="@color/test_grey">
    </View>

    <TextView
        android:text="Save"
        android:id="@+id/save_edit_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_edit_cycle"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp">
    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="22dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/save_edit_cycle"
        app:layout_constraintBottom_toBottomOf="@id/save_edit_cycle"
        app:layout_constraintStart_toEndOf="@id/save_edit_cycle"
        app:layout_constraintEnd_toStartOf="@id/delete_edit_cycle"
        android:background="@color/white"
        android:backgroundTint="@color/white">
    </View>

    <TextView
        android:text="Delete"
        android:id="@+id/delete_edit_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp">
    </TextView>

    <TextView
        android:id="@+id/cycle_name_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:textColor="@color/black"
        android:textSize="22sp">
    </TextView>

    <EditText
        android:id="@+id/cycle_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:textColorHint="@color/circular_progress_default_subtitle"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:hint="@string/cycle_name"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:singleLine="true"
        android:inputType="textAutoCorrect|textAutoComplete|textMultiLine">
    </EditText>

    <View
        android:id="@+id/anchorViewForEditRows"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp">
    </View>

    <TextView
        android:id="@+id/firstRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/secondRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/thirdRoundTypeHeaderInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/secondRoundTypeHeaderInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/cycle_name_edit"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/timerValueInEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginTop="12dp"
        android:textSize="23sp">
    </TextView>

    <ImageView
        android:id="@+id/infinity_toggle_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/infinity_icon_green"
        android:backgroundTint="@color/test_black">
    </ImageView>

    <Button
        android:text="Add"
        android:id="@+id/addRoundToCycleButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/timerValueInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginStart="8dp"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/test_black"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">
    </Button>

    <Button
        android:text="Rem"
        android:id="@+id/subtract_cycle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/timerValueInEditPopUp"
        app:layout_constraintTop_toBottomOf="@id/firstRoundTypeHeaderInEditPopUp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="@color/test_black"
        app:cornerRadius="50dp"
        app:rippleColor="#37474F"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">
    </Button>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/round_recycler_layout"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:paddingTop="4dp"
        android:background="@drawable/recycler_border">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/round_list_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:id="@+id/round_list_divider"
            android:layout_width="2dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/light_black">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/round_list_recycler_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/round_list_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/buttonToLaunchTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/start_cycle">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>