    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!--This is what is causing "cursor" blips in rounds recycler + stats edit. It's used in Preference Fragment sub-headers.  !-->
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:itemBackground">@color/dark_grey</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="SecondaryTextColorOverride" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/purple_200</item>
    </style>

    <style name="ActionBarStyling" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="backgroundTint">@color/night_shadow</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/blue_green</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/darker_grey</item>
    </style>

    <style name="TimerTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_short</item>
        <item name="android:windowExitAnimation">@anim/fade_out_short</item>
    </style>

    <style name="SlideFromLeftAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_left</item>
    </style>

    <style name="SlideFromLeftAnimationShort">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left_short</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_left_short</item>
    </style>

    <style name="SlideFromRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_right</item>    </style>

    <style name="SlideTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <style name="SlideTopAnimationWithoutAnimatedExit">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top_without_exit</item>
    </style>

    <style name="SlideBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="CustomActionBarTheme">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle_h1920">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="EditCyclesPopUpTheme">
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <style name="EditButtonTextColor">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="MenuTheme">
        <item name="backgroundColor">@color/darker_grey</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="StatFragmentThemeDark">
<!--        <item name="android:background">@color/black</item>-->
        <!-- backgroundTint hits the backgrounds of our ImageViews. It also overwrites our calendar day highlight. !-->
<!--        <item name="android:backgroundTint">@color/black</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="StatRecyclerHeaderTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StatRecyclerViewsTheme">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="EditActivityPopUpTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActivityAdditionPopUpTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calorieComparisonTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/test_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayHeader">
        <item name="android:textSize">17sp</item>
    </style>



    <style name="CalendarHeader_h1920">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/test_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayHeader_h1920">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/calendar_date_text_color_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CalendarDateTextAppearance_h1920" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/calendar_date_text_color_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StatsExpansionPopUpTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@color/black</item>
    </style>

</resources>