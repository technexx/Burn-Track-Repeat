<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="colorPrimary">@color/black</item>
<!--        <item name="android:listDivider">@drawable/recycler_views_divider_white</item>-->
    </style>

    <style name="tabText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimerTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_short</item>
        <item name="android:windowExitAnimation">@anim/fade_out_short</item>
    </style>

    <style name="SlideFromLeftAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_left</item>
    </style>

    <style name="SlideFromLeftAnimationShort">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left_short</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_left_short</item>
    </style>

    <style name="SlideFromRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_right</item>    </style>

    <style name="SlideTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top_without_exit</item>
    </style>

    <style name="SlideBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="EditButtonTextColor">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="StatFragmentThemeDark">
        <item name="android:background">@color/black</item>
        <!-- backgroundTint hits the backgrounds of our ImageViews !-->
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StatRecyclerHeaderTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StatRecyclerViewsTheme">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/test_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayHeader">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/calendar_view_date_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>